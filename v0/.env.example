# TravelBack Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - Must be set
# ============================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:dev123@localhost:5432/travelback

# OpenAI API key
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# ============================================
# OPTIONAL - Defaults shown
# ============================================

# Server configuration
PORT=3000
NODE_ENV=development

# LLM Configuration
LLM_TEXT_MODEL=gpt-5-nano
LLM_VISION_MODEL=gpt-5-nano
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Storage Configuration
# Options: local (for development) or supabase (for production)
STORAGE_PROVIDER=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# Processing Configuration
# Number of photos to process concurrently (higher = faster but more API calls)
MAX_CONCURRENT_PHOTOS=3

# Logging (optional)
# LOG_LEVEL=debug  # Options: error, warn, info, debug
